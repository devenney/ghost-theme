<nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
            {{#if @blog.logo}}
                <a class="navbar-item" href="{{@blog.url}}">
			<figure clas="image is-2by1">
				<img src="{{@blog.logo}}" alt="{{@blog.title}}" />
			</figure>
		</a>
            {{else}}
                <a class="navbar-item" href="{{@blog.url}}">{{@blog.title}}</a>
            {{/if}}

        <button class="button navbar-burger" data-target="navMenu">
          <span></span>
          <span></span>
          <span></span>
        </button>
    </div>
    <div class="navbar-menu" id="navMenu">
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
      <div class="navbar-end">
            {{#if @blog.facebook}}
                <a class="navbar-item" href="{{facebook_url @blog.facebook}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if @blog.twitter}}
                <a class="navbar-item social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
            {{/if}}
        </div>
        {{#if @labs.subscribers}}
            <a class="navbar-item subscribe-button" href="#subscribe">Subscribe</a>
        {{else}}
            <a class="navbar-item" href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
        {{/if}}
      </div>
    </div>
</nav>
